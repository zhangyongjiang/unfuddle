<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:background="#FFFFFF"
	android:layout_height="fill_parent">
	<RelativeLayout android:layout_width="fill_parent"
		android:padding="2dip" android:focusable="true"
		android:focusableInTouchMode="true" android:layout_height="wrap_content"
		android:background="#FFFFFF">
		<ImageButton android:layout_width="50dip" android:id="@+id/btnSearch"
			android:layout_height="48dip" android:src="@drawable/search"
			android:scaleType="center" android:layout_centerVertical="true"
			android:focusable="true"
			android:layout_alignParentRight="true"></ImageButton>
		<EditText android:id="@+id/searchText" android:text=""
			android:layout_height="50dip" android:textSize="8pt"
			android:singleLine="true"
			android:layout_width="fill_parent" android:gravity="center_vertical"
			android:layout_toLeftOf="@id/btnSearch" android:textColor="#000000"></EditText>
	</RelativeLayout>

	<View android:layout_width="fill_parent" android:layout_height="1px"
		android:background="#888888" />

	<ListView android:id="@+id/wordlist" android:layout_width="fill_parent" 
		android:divider="#888888"
		android:dividerHeight="1px"
		android:layout_height="wrap_content" />

</LinearLayout>
